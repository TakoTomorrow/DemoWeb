    "version": "0.2.0",
    "configurations": [
        // DemoWeb 
        {
            "name": "DemoWeb",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build DemoWeb with Docker",
            "program": "${workspaceFolder}/DemoWeb/bin/Debug/net6.0/DemoWeb.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        }
    ]
}